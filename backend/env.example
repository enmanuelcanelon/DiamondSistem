# ============================================
# DIAMONDSISTEM - VARIABLES DE ENTORNO
# Copiar este archivo a .env y configurar
# ============================================

# Puerto del servidor
PORT=5000

# Base de datos PostgreSQL
DATABASE_URL="postgresql://usuario:root@localhost:5432/diamondsistem?schema=public"

# JWT Secret (generar uno seguro en producción)
JWT_SECRET=tu_secreto_super_seguro_cambiar_en_produccion_12345

# JWT Expiration
JWT_EXPIRES_IN=7d

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUNDS=10

# CORS Origins (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Entorno (development, production)
NODE_ENV=development

# Configuración de la aplicación
APP_NAME=DiamondSistem
APP_VERSION=1.0.0

# URL del frontend (para redirecciones y CORS)
FRONTEND_URL=http://localhost:5173

# Logs
LOG_LEVEL=debug



